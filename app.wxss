/**app.wxss**/
@import "components/icon.wxss";

view {
  box-sizing: border-box;
}

.container {
  background: #fff;
}

/* ==================
        导航
 ==================== */
.cu-header {
  display: block;
  position: relative;
}

.cu-header .cu-bar .content {
  width: calc(100% - 440rpx);
}

.cu-header .cu-bar {
  min-height: 0px;
  padding-right: 220rpx;
  box-shadow: 0rpx 0rpx 0rpx;
  box-sizing: border-box;
  z-index: 9999;
}

.cu-header .cu-bar .border-action {
  position: relative;
  height: 30px;
  border-radius: 1000rpx;
  border: 1rpx solid #eee;
  color: #333;
}

.cu-header .cu-bar .border-action text {
  display: block;
  flex: 1;
  margin: auto !important;
  text-align: center;
  font-size: 36rpx;
}

.cu-header .cu-bar .border-action text:first-child {
  border-right: 1rpx solid #eee;
}

.cu-header .cu-bar {
  display: flex;
  position: relative;
  align-items: center;
  min-height: 100rpx;
  justify-content: space-between;
}

.cu-header .cu-bar .action {
  display: flex;
  align-items: center;
  height: 100%;
  justify-content: center;
  max-width: 100%;
}

.cu-header .cu-bar .action:first-child {
  margin-left: 30rpx;
  font-size: 30rpx;
}

.cu-header .cu-bar .action text.text-cut {
  text-align: left;
  width: 100%;
}

.cu-header .cu-bar .action:first-child>text[class*="cuIcon-"] {
  margin-left: -0.3em;
  margin-right: 0.3em;
}

.cu-header .cu-bar .action:last-child {
  margin-right: 30rpx;
}

.cu-header .cu-bar .action>text[class*="cuIcon-"],
.cu-header .cu-bar .action>view[class*="cuIcon-"] {
  font-size: 36rpx;
}

.cu-header .cu-bar .action>text[class*="cuIcon-"]+text[class*="cuIcon-"] {
  margin-left: 0.5em;
}

.cu-header .cu-bar .content {
  position: absolute;
  text-align: center;
  width: calc(100% - 340rpx);
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  margin: auto;
  height: 60rpx;
  font-size: 32rpx;
  line-height: 60rpx;
  cursor: none;
  pointer-events: none;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.cu-header .cu-bar.fixed {
  position: fixed;
  width: 100%;
  top: 0;
  z-index: 1024;
  /* box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1); */
}
