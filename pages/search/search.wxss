/* pages/search/search.wxss */
.container {
  background: #fafafa;
}

.search-input {
  display: flex;
  justify-content: space-between;
  padding: 40rpx 40rpx;
}
.search-input .input{
  flex: 1;
  padding-left: 20rpx;
  height: 80rpx;
  border-radius: 10rpx 0 0 10rpx;
  background: #fff;
}

.search-input .search-btn {
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 0 10rpx 10rpx 0;
  background: #fff;
}

.card-block {
  padding: 0 40rpx;
}
.card {
  padding: 20rpx 40rpx;
  display: flex;
  justify-content: space-between;
  background: #fff;
}

.card .value {
  font-weight: bolder;
}
.card .unit {
  margin-left: 10rpx;
  font-size: 24rpx;
}
