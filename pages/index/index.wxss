.container {
  position: relative;
  background-color: #2d1d48;
}
.container::before {
  position: absolute;
  width: 100%;
  height: 100%;
  content: '';
  background: url(https://zzes-1251916954.cos.ap-shanghai.myqcloud.com/food.jpg) center / cover no-repeat;
  filter: blur(3px);
  z-index: 0;
}

.main-content {
  position: relative;
  z-index: 1;
}

.header-text {
  padding: 4px 40rpx;
  line-height: 1.3;
  font-size: 80rpx;
  font-weight: bolder;
  color: #fff;
}

.header-text.big-text {
  font-size: 112rpx;
}

.search {
  padding-right: 128rpx;
}

.search-input {
  display: flex;
  justify-content: space-between;
  padding: 0 40rpx;
  margin-top: 60rpx;
  height: 130rpx;
  line-height: 130rpx;
  background: #fff;
  color: #333;
  font-weight: bold;
  border-radius: 0 2rem 2rem 0;
}

.icon-search {
  font-size: 50rpx;
}
