.container {
  position: relative;
  background-color: #2d1d48;
}
.container::before {
  position: absolute;
  width: 100%;
  height: 100%;
  content: '';
  background: url(https://zzes-1251916954.cos.ap-shanghai.myqcloud.com/food.jpg) center / cover no-repeat;
  filter: blur(3px);
  z-index: 0;
}

.main-content {
  position: relative;
  z-index: 1;
}

.header-text {
  padding: 4px 40rpx;
  line-height: 1.3;
  font-size: 80rpx;
  /* font-weight: bolder; */
  color: #fff;
}

.header-text.big-text {
  font-size: 112rpx;
}

.search {
  padding-right: 128rpx;
}

.search-input {
  display: flex;
  justify-content: space-between;
  padding: 0 40rpx;
  margin-top: 60rpx;
  height: 130rpx;
  line-height: 130rpx;
  background: #fff;
  color: #333;
  font-weight: bold;
  border-radius: 0 2rem 2rem 0;
}

.icon-search {
  font-size: 50rpx;
}

.type-block {
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: relative;
  margin-top: 60rpx;
  padding: 40rpx;
}

.type-item {
  padding: 20rpx;
  margin-bottom: 20rpx;
  line-height: 1.5;
  color: #fff;
  font-weight: bold;
  text-align: center;
  box-shadow: 0 2px 12px 0 rgba(0,0,0,.1);
}
.type-item.high {
  background: rgba(245, 108, 108, .7);
}
.type-item.middle {
  background: rgba(230, 162, 60, .7);
}
.type-item.low {
  background: rgba(103, 194, 58, .7);
}

.big-data-block {
  padding: 10rpx 20rpx;
  position: fixed;
  right: 0;
  bottom: 10%;
  border-radius: 25rpx 0 0 25rpx;
  font-size: 35rpx;
  font-weight: bold;
  color: #fff;
  background: rgb(255, 115, 0);
}

.big-data-model {
  padding: 40rpx;
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  margin: auto;
  width: 90%;
  height: 600rpx;
  background: #fff;
}

.big-data-image {
  width: 100%;
  height: 80%;
}
